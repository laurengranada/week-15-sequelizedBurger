<img src="assets/img/burger.png" width="300" height="300"/>
<h1>Eat-Da-Burger!</h1>

<h2>Burgers:</h2>

<div class="col-xs-6 text-center" class="list">
  <ul>
    {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">Devour it!</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="col-xs-6 text-center" class="list">
  <h2 >Devoured Burgers:</h2>


  <ul>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}

          <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ul>
</div>

<h2>Build your Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
